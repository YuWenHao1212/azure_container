# Azure Container Apps Environment Configuration Template
# Copy this to .env and fill in your actual values

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Monitoring Configuration
MONITORING_ENABLED=false
LIGHTWEIGHT_MONITORING=true
ERROR_CAPTURE_ENABLED=true

# Azure OpenAI Configuration (Main GPT-4o model)
AZURE_OPENAI_ENDPOINT=https://airesumeadvisor.openai.azure.com
AZURE_OPENAI_GPT4_DEPLOYMENT=gpt-4o-2
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_API_KEY=your-azure-openai-api-key

# GPT-4.1 Mini Japan East Configuration (High Performance)
GPT41_MINI_JAPANEAST_ENDPOINT=https://airesumeadvisor.openai.azure.com/
GPT41_MINI_JAPANEAST_API_KEY=your-gpt41-mini-api-key
GPT41_MINI_JAPANEAST_DEPLOYMENT=gpt-4-1-mini-japaneast
GPT41_MINI_JAPANEAST_API_VERSION=2025-01-01-preview

# Embedding Services
LLM2_ENDPOINT=https://wenha-m7qan2zj-swedencentral.cognitiveservices.azure.com
LLM2_API_KEY=your-llm2-api-key
EMBEDDING_ENDPOINT=https://wenha-m7qan2zj-swedencentral.cognitiveservices.azure.com/openai/deployments/text-embedding-3-large/embeddings?api-version=2023-05-15
EMBEDDING_API_KEY=your-embedding-api-key

# LLM Model Selection (Override per API endpoint)
LLM_MODEL_KEYWORDS=gpt41-mini
LLM_MODEL_GAP_ANALYSIS=gpt4o-2
LLM_MODEL_RESUME_FORMAT=gpt4o-2
LLM_MODEL_RESUME_TAILOR=gpt4o-2

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
CONTAINER_APP_API_KEY=your-container-app-api-key

# CORS Configuration
CORS_ORIGINS=https://airesumeadvisor.com,https://airesumeadvisor.bubbleapps.io,https://www.airesumeadvisor.com

# Database (if using PostgreSQL for course search)
# DATABASE_URL=postgresql://user:password@host:port/database

# Application Insights (optional)
# APPINSIGHTS_CONNECTION_STRING=your-application-insights-connection-string